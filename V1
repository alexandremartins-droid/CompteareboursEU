<!DOCTYPE html>
<html lang="fr">
<head>
<meta charset="UTF-8" />
<title>Countdown Paris</title>
<style>
    body { background: transparent; margin: 0; padding: 20px; text-align: center; color: white; font-family: Segoe UI, sans-serif; }
    .count { font-size: 100px; font-weight: 800; letter-spacing: 5px; }
    .sec { color: #00E5FF; }
</style>
</head>
<body>

<div class="count" id="paris"></div>

<script>
function updateCountdown(id, targetDate, timezone) {
    const el = document.getElementById(id);
    function tick() {
        const now = new Date().toLocaleString("en-US", { timeZone: timezone });
        const diff = targetDate - new Date(now);

        if (diff <= 0) { el.innerHTML = "00 : 00 : 00 : 00"; return; }

        const d = String(Math.floor(diff / (1000*60*60*24))).padStart(2,'0');
        const h = String(Math.floor((diff/(1000*60*60)) % 24)).padStart(2,'0');
        const m = String(Math.floor((diff/(1000*60)) % 60)).padStart(2,'0');
        const s = String(Math.floor((diff/1000) % 60)).padStart(2,'0');

        el.innerHTML = `${d} : ${h} : ${m} : <span class="sec">${s}</span>`;
    }
    tick();
    setInterval(tick, 1000);
}

updateCountdown("paris", new Date("2025-12-08T00:00:00"), "Europe/Paris");
</script>

</body>
</html>
